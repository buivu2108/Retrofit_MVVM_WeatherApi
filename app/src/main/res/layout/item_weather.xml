<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/_15dp"
    android:layout_marginEnd="@dimen/_15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bgItem"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_100dp"
        android:src="@drawable/bg_day_item_4st"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imgStatusItem"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_60dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_weather"
        app:layout_constraintEnd_toEndOf="@id/bgItem"
        app:layout_constraintStart_toStartOf="@id/bgItem"
        app:layout_constraintTop_toTopOf="@id/bgItem"

        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvTempItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/_29_c"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@id/imgStatusItem"
        app:layout_constraintEnd_toEndOf="@id/bgItem"
        app:layout_constraintStart_toStartOf="@id/bgItem"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tvDayInWeekItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/sun"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/bgItem"
        app:layout_constraintStart_toStartOf="@id/bgItem"
        app:layout_constraintTop_toBottomOf="@id/tvTempItem"
        app:layout_constraintBottom_toBottomOf="@id/bgItem"/>


</androidx.constraintlayout.widget.ConstraintLayout>